public class Main{
    public static void main(String[] args){
       int n=40;
        System.out.println(newtonsqrt(n));
    }
   public static double    newtonsqrt(int n) {
       double x=n;
       double root;
       while(true){
      root=0.5*(x+(n/x));
    if(Math.abs(root-x)<0.5){
           break;
       }

// Math.abs will produce only positive values.

       x=root
; }
        return root;
    }
}
