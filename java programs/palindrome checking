class  HelloWorld {
    public static void main(String[] args) {
        int a[] = {1, 3, 4, 6, 4, 3, 1}; boolean isPalindrome = true;
        int start = 0;
        int end = a.length - 1;
        while (start < end) {
            if (a[start] != a[end]) {
                isPalindrome = false;
                break;
            }
            start++;
            end--;
        }
        if (isPalindrome) {
            System.out.println("The array is a palindrome");
        } else {
            System.out.println("The array is not a palindrome");
        }
    }
}


